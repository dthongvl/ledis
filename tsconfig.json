{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "sourceMap": true,
      "target": "es6",
      "lib": ["dom", "esnext"],
      "outDir": "./dist",
      "baseUrl": "./src",
      "alwaysStrict": true,
      "paths": {
        "*": [
          "node_modules/*",
          "src/types/*"
        ]
      }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }